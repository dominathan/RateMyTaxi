<h2>Dashboard | <%= current_user.company.name %></h2>

<%= render 'shared/subtabs' %>

<table table id="allCustomers" class="display" cellspacing="0" width="100%">
  <thead>
  <tr>
    <th>Customer Name</th>
    <th>Customer Email</th>
    <th>Customer Phone Number</th>
  </tr>
  </thead>
  <tbody>
    <% @riders.each do |rider| %>
      <tr>
        <td><%= rider.name ? rider.name : "" %></td>
        <td><%= rider.email ? rider.email : "" %></td>
        <td><%= rider.phone_number ? rider.phone_number : "" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function() {
    $('#allCustomers').dataTable();
  });
</script>
