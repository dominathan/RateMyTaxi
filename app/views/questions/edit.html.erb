<h1>Update Question</h1>

<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @question, url: {action: "update"} do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="control-group">
        <%= f.label :content %>
        <%= f.text_field :content %>

        <%= f.label :answer_type %>
        <%= f.select :answer_type, Question::ANSWER_TYPES, include_blank: "Please Select" %>
      </div>

      <%= f.submit "Update Question", class: 'btn btn-lg btn-primary' %>

    <% end %>
  </div>
</div>
