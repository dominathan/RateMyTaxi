
<div class='container center_div'>


    <div class='center center_div'>
      <div id='logo'>Rate My Taxi</div>
      <div class='search-taxi'>
        <%= form_tag survey_new_path, method: :get do %>
          <div class='input-group'>
            <%= text_field_tag :search, params[:search], id: 'search-bar' %>
            <%= submit_tag "Find Taxi", name: nil, id: 'search-button', class: 'btn btn-default' %>
          </div>
        <% end %>
      </div>
    </div>

</div>
