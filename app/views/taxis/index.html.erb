<h2><%= current_user.company_name %></h2>

<table class='table table-hover'>
  <tr>
    <th>Driver Full Name</th>
    <th>Driver's License Number</th>
    <th>Generated Identification Number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <tr>
    <tbody>
    <% @taxis.each do |taxi| %>
      <tr>
        <td><%= Taxi.full_name(taxi) %></td>
        <td><%= taxi.driver_id %></td>
        <td><%= taxi.id %></td>
        <td><%= link_to 'Show', user_taxi_path(current_user, taxi) %></td>
        <td><%= link_to 'Edit', edit_user_taxi_path(current_user, taxi) %></td>
        <td><%= link_to 'Destroy', user_taxi_path(current_user, taxi), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </tr>
</table>

<h2><%= link_to "Add Taxi", new_user_taxi_path(current_user) %></h2>

<%= will_paginate @taxis, renderer: BootstrapPagination::Rails %>
