
<h2><%= current_user.company_name %></h2>

<%= render 'shared/subtabs' %>


<table class='table table-hover'>
  <tr>
    <th>Driver Full Name</th>
    <th>Driver's License Number</th>
    <th>Generated Identification Number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <tr>
    <tbody>
    <% @taxis.each do |taxi| %>
      <tr>
        <td><%= Taxi.full_name(taxi) %></td>
        <td><%= taxi.driver_id %></td>
        <td><%= taxi.id %></td>
        <td><%= link_to 'Show', user_taxi_path(current_user, taxi), :class => 'btn btn-sm btn-primary'%></td>
        <td><%= link_to 'Edit', edit_user_taxi_path(current_user, taxi), :class => 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Destroy', user_taxi_path(current_user, taxi), :class => 'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </tr>
</table>

<div class="row">
  <div class='col-lg-4'>
  <%= will_paginate @taxis, renderer: BootstrapPagination::Rails %>
  </div>
  <div class='col-lg-4 col-lg-offset-1'>
    <div class=''>
      <%= link_to "Add Taxi", new_user_taxi_path(current_user),
        :class => 'btn btn-lg btn-primary', :id => 'addtaxi' %>
    </div>
  </div>
</div>
