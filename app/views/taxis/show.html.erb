


<h2><%= @taxi.driver_id %> Review Information</h2>


<table class="table table-hover">
  <tr>
    <th>Question</th>
    <th>Answer</th>
    <th>Date</th>
    <th>Time</th>
  </tr>
  <% @answers.each do |ans| %>
  <tr>
    <td><%= Question.where(id: ans.question_id).first.content %></td>
    <td><%= ans.content %></td>
    <td><%= ans.created_at.strftime("%b %d, %Y") %></td>
    <td><%= ans.created_at.strftime("%l:%M %p") %></td>
  </tr>
  <% end %>
</table>
<div class="row">
  <div class='col-lg-4'>
    <%= will_paginate @answers, renderer: BootstrapPagination::Rails %>
  </div>
</div>
<br>
<br>

<%= @final_load.length.times do |n| %>

  <div id="<%= n %>" style="min-width: 310px; height: 400px; margin: 0 auto"></div>

  <script type="text/javascript">

    $(function () {

      var taxi_id = '<%= raw @taxi.driver_id %>'
      var categories = <%=raw @final_load[n][2]%>;
      var seriesData = <%=@final_load[n][0]%>;
      var title = '<%=@final_load[n][1]%>';

      $('#<%= n %>').highcharts({
          chart: {
              type: 'column'
          },
          credits: {
              enabled: false
          },
          title: {
              text: title
          },
          subtitle: {
            text: "Driver's License: "+taxi_id
          },
          xAxis: {
              categories: categories
          },
          yAxis: {
              min: 0,
              title: {
                  text: 'Count'
              }
          },
          tooltip: {
              headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
              pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                  '<td style="padding:0"><b>{point.y} </b></td></tr>',
              footerFormat: '</table>',
              shared: true,
              useHTML: true
          },
          plotOptions: {
              column: {
                  pointPadding: 0.2,
                  borderWidth: 0
              }
          },
          series: [{
              name: title,
              data: seriesData

          }]
      });
  });

  </script>

<% end %>
