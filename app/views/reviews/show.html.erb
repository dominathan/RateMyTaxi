<h2><%= @review.name %> | <%= current_user.company_name ? current_user.company_name : "" %></h2>
<%= render 'shared/subtabs' %>

<table class='table table-hover'>
  <tr>
    <th>Question</th>
    <th>Response Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <tr>
    <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.content %></td>
        <td><%= question.answer_type %></td>

        <td><%= link_to 'Edit', edit_question_path(question), :class => 'btn btn-sm btn-primary'%></td>
        <td><%= link_to 'Remove', remove_question_path(@review, question), method: :post, data: { confirm: 'This will permanently remove this question and any answers that have been given to this question.  Are you sure?' }, :class => 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
  </tr>
</table>


