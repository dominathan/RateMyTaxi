<h1><%= @review.name %></h1>

<table class='table table-hover'>
  <tr>
    <th>Question</th>
    <th>Response Type</th>
    <th>Question ID</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <tr>
    <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.content %></td>
        <td><%= question.answer_type %></td>
        <td><%= question.id%></td>
        <td><%= link_to 'Edit', edit_question_path(question), :class => 'btn btn-sm btn-primary'%></td>
        <td><%= link_to 'Remove', question_path(question), method: :delete, data: { confirm: 'Destroying this question will permanently removed this question and associated answers.  Are you sure?' }, :class => 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
  </tr>
</table>

<div class='col-lg-6 col-lg-offset-4'>
  <%= link_to "Add Question", edit_user_review_path(current_user, @review), :class => 'btn btn-md btn-primary' %>
  <%= link_to "New Review", new_user_review_path(current_user), :class => 'btn btn-md btn-primary' %>
  <%= link_to "Delete Review", user_review_path(current_user,@review), :class => 'btn btn-md btn-danger', method: :delete, data: { confirm: "Are you sure you want to delete this review and all its contents?" } %>

</div>
